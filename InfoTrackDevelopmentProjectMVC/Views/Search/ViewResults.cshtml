@model IEnumerable<InfoTrackDevelopmentProjectMVC.Models.SearchResultModel>

@{
    ViewData["Title"] = "View";
}

<h1>Search Results</h1>
<a class="nav-link text-primary" asp-area="" asp-controller="Search" asp-action="SearchForm">Go Back</a>
@if(Model.Count() > 0)
{
    @if(Model.Count() == 1)
    {
        <h2>There was @Model.Count() result in your search.</h2>
    }
    else
    {
        <h2>There were @Model.Count() results in your search.</h2>    
    }
    
    <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UrlText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Rank)
                </td>
                <td>
                    <a href="@item.Url">@Html.DisplayFor(modelItem => item.UrlText)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
            </tr>
        }
    </tbody>
    </table>
}
else
{
    <h2>There were no results for your search.</h2>
}